  "settings": {
    "analysis": {
      "analyzer": {
        "recid_analyzer": {
          "tokenizer": "recid_tokenizer"
        },
        "names_analyzer": {
          "filter": ["ascii_normalizer", "lowercase_normalizer"],
          "char_filter": ["dot_to_whitespace_normalizer"],
          "tokenizer": "standard",
          "type": "custom"
        },
        "names_initials_analyzer": {
          "filter": [
            "ascii_normalizer",
            "initial_normalizer",
            "lowercase_normalizer"
          ],
          "char_filter": ["dot_to_whitespace_normalizer"],
          "tokenizer": "standard",
          "type": "custom"
        }
      },
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "recid_tokenizer": {
          "type": "pattern",
          "pattern": "(\\d+)",
          "group": 1
        }
      },
      "char_filter": {
        "dot_to_whitespace_normalizer": {
          "type": "pattern_replace",
          "pattern": "\\.",
          "replacement": " "
        }
      },
      "filter": {
        "ascii_normalizer": {
          "preserve_original": true,
          "type": "asciifolding"
        },
        "lowercase_normalizer": {
          "type": "lowercase"
        },
        "initial_normalizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 1
        }
      }
    }
